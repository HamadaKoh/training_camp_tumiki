FROM node:18-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code (in production, we'd copy everything)
COPY . .

# Expose port
EXPOSE 3000

# Development command
CMD ["npm", "run", "dev"]